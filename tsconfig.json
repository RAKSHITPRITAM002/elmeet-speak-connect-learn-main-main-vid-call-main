{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "react/jsx-runtime": ["./src/jsx-runtime.d.ts"],
      "components/*": ["./src/components/*"],
      "components": ["./src/components.ts"],
      "utils": ["./src/utils.ts"],
      "ui/*": ["./src/components/ui/*"],
      "ui": ["./src/ui.ts"],
      "lib/*": ["./src/lib/*"],
      "lib": ["./src/lib.ts"],
      "hooks/*": ["./src/hooks/*"],
      "hooks": ["./src/hooks.ts"],
      "contexts/*": ["./src/contexts/*"],
      "contexts": ["./src/contexts"],
      "integrations/*": ["./src/integrations/*"],
      "integrations": ["./src/integrations.ts"],
      "pages/*": ["./src/pages/*"],
      "pages": ["./src/pages.ts"],
      "services/*": ["./src/services/*"],
      "services": ["./src/services.ts"]
    },
    "moduleResolution": "node",
    "jsxImportSource": "react",
    "typeRoots": ["./node_modules/@types", "./src"]
  },
  "include": [
    "src/**/*", 
    "src/global.d.ts", 
    "src/react-app.d.ts", 
    "src/jsx-runtime.d.ts", 
    "src/jsx.d.ts", 
    "src/components.d.ts", 
    "src/aliases.d.ts", 
    "src/index.d.ts",
    "src/hooks.d.ts",
    "src/contexts.d.ts",
    "src/lib.d.ts",
    "src/utils.d.ts",
    "src/ui.d.ts",
    "src/integrations.d.ts",
    "src/pages.d.ts",
    "src/services.d.ts"
  ],
  "exclude": ["node_modules"]
}